@model IEnumerable<AppRole>

<a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Roles">Role Ekle</a>
<br />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">User List</h2>
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr class="bg-dark text-white">
                        <th>Rol Adı</th>
                        <th>Kullanıcılar</th>
                        <th>Aksiyonlar</th>
                    </tr>
                </thead>
                @if(Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            Role Yok
                        </td>
                    </tr>
                }
                <tbody>
                    @foreach (var appRole in Model)
                    {
                        <tr class="bg-info">
                            <td>@appRole.Name</td>
                            <td asp-role-users="@appRole.Id"></td>
                            @* asp-role-users adında bir tagHelper tanımladık, anlamı şu: bir metotum var ve appRole.Id i bilgi olarak alıyor. *@

                            <td>
                                <a asp-controller="Roles" asp-action="Edit" method="post">
                                    <a class="btn btn-primary">Edit</a>
                                    
                                </a>
                                <form asp-action="Delete" method="post" style="display: inline-block;" onsubmit="return confirm('emin misiniz?')">
                                    <input type="hidden" value="@appRole.Id" name="id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
