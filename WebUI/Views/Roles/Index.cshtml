@model IEnumerable<AppRole>

<a class="btn btn-sm btn-primary mb-3" asp-action="Create" asp-controller="Roles">Role Ekle</a>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Role List</h2>
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Rol Adı</th>
                        <th>Kullanıcılar</th>
                        <th>Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center">Role Yok</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var appRole in Model)
                        {
                            <tr>
                                <td>@appRole.Name</td>
                                <td asp-role-users="@appRole.Id">
                                    
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Roles" asp-action="Edit" asp-route-id="@appRole.Id">Edit</a>
                                    <form asp-action="Delete" method="post" style="display: inline-block;" onsubmit="return confirm('Emin misiniz?')">
                                        <input type="hidden" value="@appRole.Id" name="id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
